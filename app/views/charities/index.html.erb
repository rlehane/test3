<p id="notice"><%= notice %></p>

<h1>All Charities</h1>

<table>
  <thead>
    <tr>
      <th><h3>Charity name</h3></th>
      <th><h3>Applicant name</h3></th>
      <th><h3>About</h3></th>
      <th><h3>Phone</h3></th>
      <th><h3>Email</h3></th>
      <th><h3>Tax number</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charities.each do |charity| %>
      <tr>
        <td><%= charity.charity_name %></td>
        <td><%= charity.applicant_name %></td>
        <td><%= charity.about %></td>
        <td><%= charity.phone %></td>
        <td><%= charity.email %></td>
        <td><%= charity.tax_number %></td>


          <div class="Vol-button">
          <td><%= link_to 'Show', charity, :class => 'btn btn-primary'%></td>
          </div>
          <div class="Vol-button">
          <td><%= link_to 'Edit', edit_charity_path(charity), :class => 'btn btn-warning' %></td>
          </div>
          <div class="Vol-button">
          <td><%= link_to 'Destroy', charity, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
        </tr>
      <% end %>
    </tbody>

  </table>
  </div>

  <br>
  <div class="Vol-footer">  
   <%= link_to 'New Charity User', new_charity_path, :class => 'btn btn-primary' %>
  </div>
</div>
