<%= form_for @user, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div id="form-options">
 


<!-- for a volunteer registration, anyone can do this -->
    <div class="field">
      <%= f.text_field :first_name, :placeholder => 'First Name'  %>
    </div>
    <div class="field">
      <%= f.text_field :last_name, :placeholder => 'Last Name'  %>
      </div>
    <div class="field">                    
      <%= f.text_field :email, :placeholder => 'Email'  %>
    </div>
    <div class="field">
      <%= f.text_field :occupation, :placeholder => 'Occupation'  %>
    </div>
    <div class="field">
      <%= f.text_field :location, :placeholder => 'Location'  %>
    </div>
    <div class="field">
      <%= f.text_field :about, :placeholder => 'About'  %>
    </div>
    <div class="field">
      <%= f.text_field :tag_list, :placeholder => 'Skills (separated by commas)'  %>
    </div>
    <div class="field">
      <%= f.password_field :password, :placeholder => 'Password'  %>
    </div>
    <div class="field">
      <%= f.password_field :password, :placeholder => 'Password Confirmation'  %>
    </div>
    <div class="field">
    <center>
      <%= f.file_field :avatar %>
      </center>
    </div>
    <div class="actions">
   <%= f.submit class: 'btn btn-primary' %>
    </div>
 <% end %>

</div>






