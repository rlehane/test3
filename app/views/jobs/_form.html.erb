
<%= form_for @job, html: { multipart: true } do |f| %>

 
     
     


  <% if @job.errors.any? %>
  <a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Write a Comment</a>
   <div id="error_explanation">
    
          <div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h2 id="myModalLabel">Add Comment</h2>
            </div>
            <div class="modal-body">
               <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
                <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
            </div>
            <div class="modal-footer">
            <center>
              <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Close</button>
              </center>

<!--               <button class="btn btn-primary">Save changes</button> -->
            </div>
          </div> 
  <% end %>





  <center>
    <div class="field"> 
      <%= f.text_field :title, :placeholder => 'Title' %>
    </div>
    <div class="field">
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div> 
    <div class="field">
      <%= f.text_field :charity, :placeholder => 'Charity' %>
    </div>
    <div class="field">
      <%= f.text_area :description, :placeholder => 'Description' %>
    </div>
    <div class="field">
      <%= f.date_select :date, :placeholder => 'Date' %>
    </div>
    <div class="field">
      <%= f.time_select :time, :placeholder => 'Time' %>
    </div>
    <div class="field">
      <%= f.text_field :no_vols, :placeholder => 'Number of Volunteers' %>
    </div>
    <div class="field">
      <%= f.text_field :location, :placeholder => 'Location' %>
    </div>
    <div class="field">
      <%= f.file_field :image %>
    </div>
  </center>

  <div class="actions">
     <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
