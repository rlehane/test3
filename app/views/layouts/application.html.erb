              <%= link_to "About Us", root_path %>
           </li>
           <li class="scroll">
              <%= link_to "Our Users", root_path %>
           </li>
           <li class="scroll">
              <%= link_to "Contact", root_path %>
           </li>
             <li class="scroll">
             <% if current_user %>
              You are logged in as <%= current_user.first_name %>.
              <%= link_to "My Profile", current_user %>
              </li>
              <li class="scroll">
              <%= link_to "Log Out", logout_path %>
              </li>
              <% else %>
              <%= link_to "Sign Up", signup_path %> 
              </li>
             <li class="scroll">
              <%= link_to "Log In", login_path %>
              <% end %>
              </div>
              <% flash.each do |key, value| %>
              <%= content_tag(:div, class: "alert alert-#{key}") do %>
              <p><%= value %></p>
              <% end %>
              <% end %>
            </li>
          </ul>
<!--         </div> -->
      </div>
    </div><!--/#main-nav-->
