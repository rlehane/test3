<div id = "charMenu">
<div align="center">
 <h2>Charity Application</h2>
  <h3>Send us an application to become a TFC charity</h3>

    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <div class="field">
      <%= label_tag 'Charity Name' %><br>
      <%= f.input_field :name, :required => true, :input_html => {:style => 'width: 40%'}%>
      </div>
      <div class="field">
      <%= label_tag 'Contact email' %><br>
      <%= f.input_field :email, :required => true %>
      </div>
      <div class="field">
      <%= label_tag 'Charity details' %><br>
      <%= f.input_field :about, :as => :text, :required => true, :placeholder => 'Tell us what your charity does...' %>
      </div>
      <div class="field">
      <%= label_tag 'Tax Number' %><br>
      <%= f.input_field :tax_number, :required => true %>
      </div>
      <div class="field">
      <%= label_tag 'Contact number' %><br>
      <%= f.input_field :phone, :required => true %>
      </div>
      <div class="field">
      <%= label_tag 'Charity admin name' %><br>
      <%= f.input_field :admin, :required => true, :placeholder => 'Name of applicant' %>
      </div>
      <div class= "hidden">
        <%= f.input_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
      </br>
    <div class="button">
      <%= f.button :submit, 'Send charity request', :class=> "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div> 
</div>